{
  "name": "logbang",
  "version": "0.0.0",
  "description": "Simple structured logger for browsers and node.js",
  "main": "dist/logger.js",
  "files": ["dist"],
  "scripts": {
    "compile": "tsc",
    "test": "jest --coverage",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "validate": "npm run compile && npm run lint && npm test",
    "prepush": "npm run validate"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/logbang/logbang.git"
  },
  "keywords": ["logging", "typescript", "nodejs", "browser"],
  "author": "Georges Haidar <ghaidar0@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/logbang/logbang/issues"
  },
  "homepage": "https://github.com/logbang/logbang#readme",
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "express": "^4.16.2",
    "husky": "^0.14.3",
    "jest": "^22.0.1",
    "ms": "^2.1.1",
    "on-headers": "^1.0.1",
    "prettier": "^1.9.2",
    "pretty-hrtime": "^1.0.3",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.6.2",
    "uuid": "^3.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "mapCoverage": true
  }
}
